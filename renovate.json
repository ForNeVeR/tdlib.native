{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchDatasources": ["github-runners"],
            "enabled": false
        }
    ],
    "customManagers": [
        {
            "description": "Update the packages in F# scripts.",
            "customType": "regex",
            "managerFilePatterns": [
                "*.fsx"
            ],
            "matchStrings": [
                "#r \"nuget: (?<depName>.+), (?<currentValue>\\S+)\""
            ],
            "datasourceTemplate": "nuget"
        },
        {
            "customType": "regex",
            "datasourceTemplate": "nuget",
            "fileMatch": "\\.proj$",
            "matchStrings": [
                "Sdk=\"(?<packageName>.+?)/(?<currentValue>.+?)\""
            ]
        }
    ]
}
