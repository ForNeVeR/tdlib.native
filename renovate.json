{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "datasourceTemplate": "nuget",
            "fileMatch": "\\.proj$",
            "matchStrings": [
                "Sdk=\"(?<packageName>.+?)/(?<currentValue>.+?)\""
            ]
        }
    ]
}
