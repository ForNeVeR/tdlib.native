{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchDatasources": ["github-runners"],
            "enabled": false
        }
    ],
    "nuget": {
        "fileMatch": ["\\.proj$"]
    },
    "customManagers": [
        {
            "customType": "regex",
            "datasourceTemplate": "nuget",
            "fileMatch": "\\.proj$",
            "matchStrings": [
                "Sdk=\"(?<packageName>.+?)/(?<currentValue>.+?)\""
            ]
        }
    ]
}
